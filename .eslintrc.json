{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": ["warn"],
        "no-useless-escape": 0,
        "no-unused-vars": ["warn"],
        "indent": ["error", 4],
        "semi": 0,
        "quotes": ["error", "double"],
        "eqeqeq": 2,
        "no-trailing-spaces": 0,
        "no-debugger": ["warn"]
    },
    "globals": {
        "$": true,
        "firebase": true,
        "angular": true,
        "$angular": true
    }
}

